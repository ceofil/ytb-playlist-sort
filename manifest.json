{
  "manifest_version": 2,
  "name": "ytb-playlist-sort",
  "version": "1.0",

  "description": "Sorts youtube playlists based on duration",

  "icons": {
    "48": "icons/border-48.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["main.js"],
      "run_at": "document_idle"
    }
  ]
}

